@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="max-w-xl mx-auto px-6 py-10 space-y-8">

    <!-- Title -->
    <div class="space-y-2">
        <h1 class="text-3xl font-semibold tracking-tight text-slate-50">
            Change password
        </h1>
        <p class="text-sm text-slate-400">
            Update your account password. Make sure to choose a strong, unique password.
        </p>
    </div>

    <!-- Status message -->
    <partial name="_StatusMessage" for="StatusMessage" />

    <!-- Card -->
    <div class="rounded-2xl border border-slate-800 bg-slate-900/70 shadow-xl backdrop-blur px-6 py-6">
        <form id="change-password-form" method="post" class="space-y-6">

            <!-- Validation summary -->
            <div asp-validation-summary="ModelOnly"
                 class="hidden text-sm text-rose-300 bg-rose-950/40 border border-rose-600/40 rounded-xl px-3 py-2"
                 role="alert">
            </div>

            <!-- Old password -->
            <div class="space-y-1">
                <label asp-for="Input.OldPassword"
                       class="block text-sm font-medium text-slate-200">
                    Current password
                </label>
                <input asp-for="Input.OldPassword"
                       autocomplete="current-password"
                       aria-required="true"
                       placeholder="Enter your current password"
                       class="w-full rounded-xl border border-slate-700 bg-slate-950/70 px-3 py-2 text-sm text-slate-100
                              placeholder:text-slate-500 shadow-sm
                              focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" />
                <span asp-validation-for="Input.OldPassword" class="text-sm text-rose-400"></span>
            </div>

            <!-- New password -->
            <div class="space-y-1">
                <label asp-for="Input.NewPassword"
                       class="block text-sm font-medium text-slate-200">
                    New password
                </label>
                <input asp-for="Input.NewPassword"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Enter a new password"
                       class="w-full rounded-xl border border-slate-700 bg-slate-950/70 px-3 py-2 text-sm text-slate-100
                              placeholder:text-slate-500 shadow-sm
                              focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" />
                <span asp-validation-for="Input.NewPassword" class="text-sm text-rose-400"></span>
            </div>

            <!-- Confirm new password -->
            <div class="space-y-1">
                <label asp-for="Input.ConfirmPassword"
                       class="block text-sm font-medium text-slate-200">
                    Confirm new password
                </label>
                <input asp-for="Input.ConfirmPassword"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Re-enter your new password"
                       class="w-full rounded-xl border border-slate-700 bg-slate-950/70 px-3 py-2 text-sm text-slate-100
                              placeholder:text-slate-500 shadow-sm
                              focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-sm text-rose-400"></span>
            </div>

            <!-- Submit button -->
            <div>
                <button type="submit"
                        class="w-full rounded-xl bg-sky-600 px-4 py-2.5 text-sm font-semibold text-white
                               shadow-lg shadow-sky-500/30 transition
                               hover:bg-sky-700 active:scale-[0.98]">
                    Update password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
