@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Two-factor authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;

    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
}

<div class="max-w-xl mx-auto px-6 py-10 space-y-8">

    <!-- Tittel -->
    <div class="space-y-2">
        <h1 class="text-3xl font-semibold tracking-tight text-slate-50">
            Two-factor authentication (2FA)
        </h1>
        <p class="text-sm text-slate-400">
            Add an extra layer of security to your account using an authenticator app and recovery codes.
        </p>
    </div>

    <!-- Statusmelding -->
    <partial name="_StatusMessage" for="StatusMessage" />

    @if (consentFeature?.CanTrack ?? true)
    {
        <!-- 2FA status & recovery codes -->
        @if (Model.Is2faEnabled)
        {
            <!-- Recovery codes status -->
            @if (Model.RecoveryCodesLeft == 0)
            {
                <div class="rounded-2xl border border-rose-600/70 bg-rose-950/70 px-4 py-3 text-sm text-rose-50 shadow-lg">
                    <p class="font-semibold">
                        You have no recovery codes left.
                    </p>
                    <p class="mt-1 text-rose-100/90">
                        You must
                        <a asp-page="./GenerateRecoveryCodes"
                           class="underline underline-offset-2 hover:text-rose-200">
                            generate a new set of recovery codes
                        </a>
                        before you can log in with a recovery code.
                    </p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="rounded-2xl border border-rose-600/70 bg-rose-950/70 px-4 py-3 text-sm text-rose-50 shadow-lg">
                    <p class="font-semibold">
                        You have 1 recovery code left.
                    </p>
                    <p class="mt-1 text-rose-100/90">
                        You can
                        <a asp-page="./GenerateRecoveryCodes"
                           class="underline underline-offset-2 hover:text-rose-200">
                            generate a new set of recovery codes
                        </a>.
                    </p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="rounded-2xl border border-amber-500/70 bg-amber-950/70 px-4 py-3 text-sm text-amber-50 shadow-lg">
                    <p class="font-semibold">
                        You have @Model.RecoveryCodesLeft recovery codes left.
                    </p>
                    <p class="mt-1 text-amber-100/90">
                        You should
                        <a asp-page="./GenerateRecoveryCodes"
                           class="underline underline-offset-2 hover:text-amber-200">
                            generate a new set of recovery codes
                        </a>.
                    </p>
                </div>
            }

            <!-- 2FA actions -->
            <div class="rounded-2xl border border-slate-800 bg-slate-900/70 shadow-xl backdrop-blur px-6 py-5 space-y-4 mt-4">
                <h2 class="text-sm font-semibold text-slate-200">
                    Two-factor status
                </h2>
                <p class="text-sm text-slate-400">
                    Two-factor authentication is currently <span class="font-semibold text-emerald-400">enabled</span> for your account.
                </p>

                <div class="flex flex-wrap gap-2 pt-2">
                    @if (Model.IsMachineRemembered)
                    {
                        <form method="post" class="inline">
                            <button type="submit"
                                    class="inline-flex items-center rounded-xl border border-slate-700 bg-slate-900 px-3 py-1.5 text-xs font-medium text-slate-100
                                                       hover:bg-slate-800 hover:border-slate-600 transition">
                                Forget this browser
                            </button>
                        </form>
                    }

                    <a asp-page="./Disable2fa"
                       class="inline-flex items-center rounded-xl bg-rose-700 px-3 py-1.5 text-xs font-semibold text-white
                                      shadow shadow-rose-500/30 hover:bg-rose-800 transition">
                        Disable 2FA
                    </a>

                    <a asp-page="./GenerateRecoveryCodes"
                       class="inline-flex items-center rounded-xl bg-sky-600 px-3 py-1.5 text-xs font-semibold text-white
                                      shadow shadow-sky-500/30 hover:bg-sky-700 transition">
                        Reset recovery codes
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="rounded-2xl border border-slate-800 bg-slate-900/70 shadow-xl backdrop-blur px-6 py-5 space-y-3">
                <h2 class="text-sm font-semibold text-slate-200">
                    Two-factor authentication is disabled
                </h2>
                <p class="text-sm text-slate-400">
                    Enable 2FA to protect your account with an additional verification step when signing in.
                </p>
            </div>
        }

        <!-- Authenticator app -->
        <div class="rounded-2xl border border-slate-800 bg-slate-900/70 shadow-xl backdrop-blur px-6 py-5 space-y-4 mt-4">
            <h2 class="text-sm font-semibold text-slate-200">
                Authenticator app
            </h2>
            <p class="text-sm text-slate-400">
                Use an authenticator app (for example Microsoft Authenticator, Google Authenticator, or similar) to generate security codes.
            </p>

            <div class="flex flex-wrap gap-2 pt-1">
                @if (!Model.HasAuthenticator)
                {
                    <a id="enable-authenticator"
                       asp-page="./EnableAuthenticator"
                       class="inline-flex items-center rounded-xl bg-sky-600 px-4 py-2 text-xs font-semibold text-white
                                      shadow shadow-sky-500/30 hover:bg-sky-700 transition">
                        Add authenticator app
                    </a>
                }
                else
                {
                    <a id="enable-authenticator"
                       asp-page="./EnableAuthenticator"
                       class="inline-flex items-center rounded-xl bg-sky-600 px-4 py-2 text-xs font-semibold text-white
                                      shadow shadow-sky-500/30 hover:bg-sky-700 transition">
                        Set up authenticator app
                    </a>

                    <a id="reset-authenticator"
                       asp-page="./ResetAuthenticator"
                       class="inline-flex items-center rounded-xl border border-slate-700 bg-slate-900 px-4 py-2 text-xs font-medium text-slate-100
                                      hover:bg-slate-800 hover:border-slate-600 transition">
                        Reset authenticator app
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Cookie / privacy not accepted -->
        <div class="rounded-2xl border border-rose-600/70 bg-rose-950/70 px-4 py-3 text-sm text-rose-50 shadow-lg">
            <p class="font-semibold">
                Privacy and cookie policy have not been accepted.
            </p>
            <p class="mt-1 text-rose-100/90">
                You must accept the policy before you can enable two-factor authentication.
            </p>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
