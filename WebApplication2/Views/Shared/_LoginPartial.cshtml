@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="flex items-center gap-3">

    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Hei bruker -->
        <li>
            <span class="text-slate-300 text-sm whitespace-nowrap">
                Hi, @User.Identity!.Name
            </span>
        </li>

        <!-- My Account -->
        <li>
            <a asp-area="Identity"
               asp-page="/Account/Manage/Index"
               class="px-3 py-1.5 rounded-xl bg-slate-800 text-slate-100 text-sm hover:bg-slate-700 transition">
                My Account
            </a>
        </li>

        <!-- Log out -->
        <li>
            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                <button type="submit"
                        class="px-3 py-1.5 rounded-xl bg-rose-700 text-white text-sm hover:bg-rose-600 transition">
                    Log out
                </button>
            </form>
        </li>
    }
    else
    {
        <!-- Log in -->
        <li>
            <a asp-area="Identity"
               asp-page="/Account/Login"
               class="px-3 py-1.5 rounded-xl bg-slate-800 text-slate-100 text-sm hover:bg-slate-700 transition">
                Log in
            </a>
        </li>

        <!-- Register -->
        <li>
            <a asp-area="Identity"
               asp-page="/Account/Register"
               class="px-3 py-1.5 rounded-xl bg-slate-800 text-slate-100 text-sm hover:bg-slate-700 transition">
                Register
            </a>
        </li>
    }
</ul>
