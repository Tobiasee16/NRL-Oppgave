@model WebApplication2.Models.ObstacleData
@{
    Layout = null;
    ViewData["Title"] = "Overview";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <title>@ViewData["Title"]</title>
</head>
<body class="min-h-screen bg-gray-50 text-gray-900 flex flex-col">
    <!-- Header -->
    <header class="w-full border-b bg-white">
        <div class="mx-auto max-w-5xl px-4 py-4 flex items-center justify-between">
            <a asp-controller="Home" asp-action="Index" class="text-lg font-semibold tracking-tight">WebApplication2</a>
            <nav class="hidden sm:flex gap-4 text-sm text-gray-600">
                <a asp-controller="Home" asp-action="Index" class="hover:text-blue-600">Home</a>
                <a asp-controller="Admin" asp-action="Index" class="hover:text-blue-600">Admin</a>
            </nav>
        </div>
    </header>

    <!-- Main content -->
    <main class="flex-1 mx-auto max-w-3xl w-full px-4 py-10 sm:py-14">
        <h1 class="text-3xl font-semibold mb-6 text-center">Obstacle Overview</h1>

        <div class="bg-white rounded-xl shadow p-6 border space-y-3">
            <p><strong>Name:</strong> @Model.ObstacleName</p>
            <p><strong>Height (m):</strong> @Model.ObstacleHeight</p>
            <p><strong>Description:</strong> @Model.ObstacleDescription</p>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.GeometryGeoJson))
        {
            <div class="mt-6">
                <h2 class="text-xl font-semibold mb-2">Map View</h2>
                <div id="map-view" class="w-full rounded-xl shadow border" style="height:420px;"></div>
            </div>

            <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
            <script>
                const map = L.map('map-view').setView([59.9139, 10.7522], 12);
                L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 19,
                    attribution: '&copy; OpenStreetMap'
                }).addTo(map);

                try {
                    const raw = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.GeometryGeoJson));
                    if (raw) {
                        const gj = JSON.parse(raw);
                        const layer = L.geoJSON(gj, { style: { color: '#2563eb' } }).addTo(map);
                        try { map.fitBounds(layer.getBounds(), { padding: [20, 20] }); } catch {}
                    }
                } catch(e) {
                    console.error('Invalid GeoJSON', e);
                }
            </script>
        }
        else
        {
            <p class="mt-6 text-gray-600">No map geometry was submitted.</p>
        }

        <!-- Navigation buttons -->
        <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
            <a asp-controller="Obstacle" asp-action="DataForm"
               class="inline-flex justify-center rounded-lg bg-blue-600 px-6 py-3 text-white font-medium
                      hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500/50 transition">
                Register Another
            </a>

            <a asp-controller="Home" asp-action="Index"
               class="inline-flex justify-center rounded-lg border border-gray-300 bg-white px-6 py-3 text-gray-800 font-medium
                      hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500/30 transition">
                Back to Home
            </a>
        </div>
    </main>

    <!-- Footer -->
    <footer class="w-full border-t bg-white">
        <div class="mx-auto max-w-5xl px-4 py-6 text-sm text-gray-500 text-center">
            © @DateTime.Now.Year — WebApplication2
        </div>
    </footer>
</body>
</html>
