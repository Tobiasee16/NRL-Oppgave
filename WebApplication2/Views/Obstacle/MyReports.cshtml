@model IEnumerable<WebApplication2.Models.ObstacleData>

@{
    ViewData["Title"] = "My reports";
}

<h1 class="text-2xl font-semibold mb-4">My reports</h1>

@if (!Model.Any())
{
    <p>You have not reported any obstacles yet.</p>
}
else
{
    <div class="overflow-x-auto">
        <table class="min-w-full border border-slate-700 text-sm">
            <thead class="bg-slate-900/60">
                <tr>
                    <th class="px-3 py-2 text-left border-b border-slate-700">Id</th>
                    <th class="px-3 py-2 text-left border-b border-slate-700">Name</th>
                    <th class="px-3 py-2 text-left border-b border-slate-700">Height (m)</th>
                    <th class="px-3 py-2 text-left border-b border-slate-700">Description</th>
                    <th class="px-3 py-2 text-left border-b border-slate-700">Status</th>
                    <th class="px-3 py-2 text-left border-b border-slate-700">Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model)
                {
                    <tr class="border-b border-slate-800">
                        <td class="px-3 py-2">@o.Id</td>
                        <td class="px-3 py-2">@o.ObstacleName</td>
                        <td class="px-3 py-2">@o.ObstacleHeight</td>
                        <td class="px-3 py-2">
                            @if (!string.IsNullOrWhiteSpace(o.ObstacleDescription))
                            {
                                @o.ObstacleDescription
                            }
                            else
                            {
                                <span class="text-slate-500 italic">No description</span>
                            }
                        </td>
                        <td class="px-3 py-2">@o.Status</td>
                        <td class="px-3 py-2">@o.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
