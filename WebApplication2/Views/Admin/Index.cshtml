@model IEnumerable<WebApplication2.Models.AdminUserViewModel>

@{
    ViewData["Title"] = "Admin – User & Roles";
}

<div class="max-w-5xl mx-auto px-4 py-10 space-y-8">

    <!-- Header -->
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-3xl font-semibold tracking-tight text-slate-50">
                User management
            </h1>
            <p class="text-sm text-slate-400">
                Manage which users are <span class="font-semibold">Pilot</span> or <span class="font-semibold">Registerfører</span>.
                Admin role is reserved for system administrators.
            </p>
        </div>

        <div class="text-xs text-slate-400 space-y-1 sm:text-right">
            <p>Legend:</p>
            <p>
                <span class="inline-flex items-center rounded-full bg-emerald-900/60 px-2 py-0.5 text-[11px] text-emerald-300 border border-emerald-500/40">
                    Admin
                </span>
                <span class="inline-flex items-center rounded-full bg-sky-900/60 px-2 py-0.5 text-[11px] text-sky-300 border border-sky-500/40 ml-1">
                    Registerfører
                </span>
                <span class="inline-flex items-center rounded-full bg-slate-800 px-2 py-0.5 text-[11px] text-slate-200 border border-slate-600/60 ml-1">
                    Pilot
                </span>
            </p>
        </div>
    </div>

    @if (TempData["Message"] is string msg)
    {
        <div class="rounded-xl border border-emerald-600/60 bg-emerald-900/40 px-4 py-3 text-sm text-emerald-100">
            @msg
        </div>
    }

    <!-- Brukertabell -->
    <div class="overflow-x-auto rounded-2xl border border-slate-800 bg-slate-900/80 shadow-xl backdrop-blur">
        <table class="min-w-full text-sm text-slate-100">
            <thead class="bg-slate-900/90 border-b border-slate-800">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-[0.16em] text-slate-400">User</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-[0.16em] text-slate-400">Roles</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-[0.16em] text-slate-400">Set role</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-800">
                @foreach (var u in Model.OrderBy(x => x.Email))
                {
                    <tr class="hover:bg-slate-800/60 transition">
                        <!-- Brukerinfo -->
                        <td class="px-4 py-3 align-top">
                            <div class="font-medium text-slate-50">
                                @u.Email
                            </div>
                            <div class="text-[11px] text-slate-500 mt-0.5">
                                Id: @u.UserId
                            </div>
                        </td>

                        <!-- Rolle-badges -->
                        <td class="px-4 py-3 align-top">
                            <div class="flex flex-wrap gap-1">
                                @if (u.IsAdmin)
                                {
                                    <span class="inline-flex items-center rounded-full bg-emerald-900/60 px-2 py-0.5 text-[11px] font-medium text-emerald-300 border border-emerald-500/40">
                                        Admin
                                    </span>
                                }

                                @if (u.IsRegisterforer)
                                {
                                    <span class="inline-flex items-center rounded-full bg-sky-900/60 px-2 py-0.5 text-[11px] font-medium text-sky-300 border border-sky-500/40">
                                        Registerfører
                                    </span>
                                }

                                @if (u.IsPilot)
                                {
                                    <span class="inline-flex items-center rounded-full bg-slate-800 px-2 py-0.5 text-[11px] font-medium text-slate-200 border border-slate-600/60">
                                        Pilot
                                    </span>
                                }

                                @if (!u.IsAdmin && !u.IsRegisterforer && !u.IsPilot)
                                {
                                    <span class="inline-flex items-center rounded-full bg-slate-800 px-2 py-0.5 text-[11px] font-medium text-slate-300 border border-slate-600/60">
                                        No role
                                    </span>
                                }
                            </div>
                        </td>

                        <!-- Handlingsknapper -->
                        <td class="px-4 py-3 align-top">
                            <div class="flex flex-wrap gap-2">

                                <!-- Set Pilot -->
                                <form asp-action="SetAsPilot" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@u.UserId" />
                                    <button type="submit"
                                            class="px-3 py-1.5 rounded-full text-[11px] font-semibold
                                                   @(u.IsPilot ? "bg-slate-700 text-slate-100" : "bg-slate-800 text-slate-100 hover:bg-slate-700")
                                                   border border-slate-600/70">
                                        @(u.IsPilot ? "Pilot (current)" : "Set as Pilot")
                                    </button>
                                </form>

                                <!-- Set Registerfører -->
                                <form asp-action="SetAsRegisterforer" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@u.UserId" />
                                    <button type="submit"
                                            class="px-3 py-1.5 rounded-full text-[11px] font-semibold
                                                   @(u.IsRegisterforer ? "bg-sky-700 text-white" : "bg-sky-800 text-white hover:bg-sky-700")
                                                   border border-sky-500/60">
                                        @(u.IsRegisterforer ? "Registerfører (current)" : "Set as Registerfører")
                                    </button>
                                </form>

                                <!-- Fjern operasjonelle roller (valgfritt) -->
                                <form asp-action="ClearOperationalRoles" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@u.UserId" />
                                    <button type="submit"
                                            class="px-3 py-1.5 rounded-full text-[11px] font-medium
                                                   bg-slate-900 text-slate-300 border border-slate-600/80 hover:bg-slate-800">
                                        Clear Pilot / Registerfører
                                    </button>
                                </form>
                            </div>

                            @if (u.IsAdmin)
                            {
                                <p class="mt-2 text-[11px] text-emerald-300">
                                    Admin role is not changed here. Use code/migrations if you need to change admins.
                                </p>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>
        <a asp-controller="Home" asp-action="Index"
           class="text-sm text-sky-300 hover:text-sky-200 underline underline-offset-2">
            ← Back to home
        </a>
    </div>
</div>
